{
  "manifest_version": 2,
  "name": "GitHub SSPCloud Launcher",
  "version": "1.0.0",
  "description": "Add a button to GitHub and GitLab repository pages for one-click launch of VSCode on SSPCloud",
  "content_scripts": [
    {
      "matches": ["*://github.com/*"],
      "js": ["content/utils.js", "content/github-button.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "icons": {
    "48": "icons/sspcloud-button-48.png",
    "128": "icons/sspcloud-button-128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "sspcloud-launcher@sspcloud.fr"
    }
  },
  "permissions": ["storage"],
  "optional_permissions": ["<all_urls>"],
  "options_ui": {
    "page": "popup/options.html",
    "browser_style": false
  }
}
