{
  "name": "github-sspcloud-launcher",
  "version": "1.0.0",
  "description": "Firefox extension to launch GitHub repos on SSPCloud",
  "private": true,
  "scripts": {
    "test": "jest",
    "lint": "eslint content/ popup/",
    "build": "web-ext build --ignore-files 'node_modules' --ignore-files 'tests' --ignore-files '*.test.js' --ignore-files '.git' --ignore-files '.claude' --ignore-files 'package-lock.json' --ignore-files 'package.json' --ignore-files 'npm-debug.log' --source-dir . --artifacts-dir ."
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "web-ext": "^9.3.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  }
}
